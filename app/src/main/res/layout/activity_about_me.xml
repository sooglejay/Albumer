<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <sooglejay.youtu.widgets.TitleBar
        android:layout_width="match_parent"
        android:id="@+id/title_bar"
        android:layout_height="wrap_content"></sooglejay.youtu.widgets.TitleBar>
<sooglejay.youtu.widgets.RoundImageView
    android:layout_width="wrap_content"
    android:id="@+id/iv_avatar"
    android:src="@drawable/icon_about_me"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/middle_padding"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="赛亚人"
        android:layout_margin="@dimen/middle_padding"
        android:layout_gravity="center"
        android:textSize="36sp"
        android:textColor="@color/dark_black_color"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="sooglejay@gmail.com"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
</LinearLayout>