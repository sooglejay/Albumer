<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    android:background="@color/very_light_gray_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/middle_padding"
        android:gravity="center"
        android:text="创建新群组"
        android:textColor="@color/dark_black_color"
        android:textIsSelectable="true"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:paddingLeft="@dimen/small_padding"
        android:layout_marginRight="30dp"
        android:background="@color/white_color"
        android:hint="输入群组名称"
        android:textSize="@dimen/middle_textsize" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="48dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:background="@drawable/btn_select_white"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/dark_gray_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="@dimen/middle_padding"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:background="@color/very_light_gray_color"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:background="@drawable/btn_select_white"
            android:text="确定"
            android:textColor="@color/dark_gray_color"
            android:padding="@dimen/middle_padding"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>