<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <sooglejay.youtu.widgets.FaceImageView
        android:id="@+id/iv_photo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:id="@+id/layout_operation"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <sooglejay.youtu.widgets.CircleButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="删除"
                    android:id="@+id/tv_delete_image"
                    android:src="@drawable/icon_choose"
                    app:cb_color="@color/base_color"
                    app:cb_pressedRingWidth="8dip" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="删除"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/middle_padding"
                    android:paddingRight="@dimen/middle_padding"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>

</FrameLayout>
