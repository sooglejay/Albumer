<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_gray_color"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_bar_height">

        <LinearLayout
            android:layout_marginTop="@dimen/middle_padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_color"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/my_base_info_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_select_white"
                android:clickable="true"
                android:orientation="horizontal">

                <sooglejay.youtu.widgets.RoundImageView
                    android:id="@+id/my_avatar_image"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_margin="@dimen/middle_padding"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="三刀流"
                        android:textColor="@color/dark_black_color"
                        android:textSize="@dimen/big_textsize" />

                    <TextView
                        android:id="@+id/my_collage_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_padding"
                        android:text="天青色等烟雨，而我在睡觉"
                        android:textColor="@color/black_gray_color"
                        android:textSize="@dimen/middle_textsize" />

                    <TextView
                        android:id="@+id/signature_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/middle_padding"
                        android:layout_marginTop="@dimen/small_padding"
                        android:text="风暴中的赛亚人..."
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/small_textsize" />
                </LinearLayout>


                <TextView
                    android:id="@+id/my_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/big_padding"
                    android:text="23岁"
                    android:textSize="@dimen/big_textsize"
                    android:textStyle="italic" />
            </LinearLayout>

            <View
                android:id="@+id/gray_line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/middle_padding"
                android:background="@color/very_light_gray_color" />


            <!--申请成为学姐-->
            <LinearLayout
                android:id="@+id/my_request_as_senior_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_select_white"
                android:clickable="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/most_big_padding"
                        android:layout_marginStart="@dimen/most_big_padding"
                        android:paddingBottom="@dimen/middle_padding"
                        android:paddingTop="@dimen/middle_padding"
                        android:scaleType="center"
                        android:src="@drawable/icon_choose" />

                    <TextView
                        android:id="@+id/request_as_senior_tv"
                        android:textColor="@color/dark_black_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/big_padding"
                        android:layout_marginStart="@dimen/big_padding"
                        android:layout_weight="1"
                        android:padding="@dimen/middle_padding"
                        android:text="选择人脸识别匹配库" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/middle_padding"
                        android:layout_marginRight="@dimen/middle_padding"
                        android:src="@drawable/arrow_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/middle_padding"
                    android:background="@color/very_light_gray_color" />
            </LinearLayout>


            <!--我的回答  或提问-->
            <LinearLayout
                android:id="@+id/my_answers_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_select_white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/my_answers_or_questions_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/most_big_padding"
                    android:layout_marginStart="@dimen/most_big_padding"
                    android:paddingBottom="@dimen/middle_padding"
                    android:paddingTop="@dimen/middle_padding"
                    android:scaleType="center"
                    android:src="@drawable/icon_choose" />

                <TextView
                    android:id="@+id/my_answers_or_questions_des_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/big_padding"
                    android:layout_marginStart="@dimen/big_padding"
                    android:layout_weight="1"
                    android:text="联系人"
                    android:textColor="@color/dark_black_color"
                    android:textSize="@dimen/big_textsize" />

                <TextView
                    android:id="@+id/my_answers_or_questions_count_tv"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="14"
                    android:textColor="@color/dark_black_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/middle_padding"
                    android:layout_marginRight="@dimen/middle_padding"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <View
                android:id="@+id/gray_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/large_padding"
                android:layout_marginStart="@dimen/large_padding"
                android:background="@color/very_light_gray_color" />

            <!--我的关注-->
            <LinearLayout
                android:id="@+id/my_focus_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_select_white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/focus_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/most_big_padding"
                    android:layout_marginStart="@dimen/most_big_padding"
                    android:paddingBottom="@dimen/middle_padding"
                    android:paddingTop="@dimen/middle_padding"
                    android:scaleType="center"
                    android:src="@drawable/icon_choose" />

                <TextView
                    android:id="@+id/my_focus_des_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/big_padding"
                    android:layout_marginStart="@dimen/big_padding"
                    android:layout_weight="1"
                    android:text="关注"
                    android:textColor="@color/dark_black_color" />

                <TextView
                    android:id="@+id/my_focus_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="14"
                    android:textColor="@color/dark_black_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/middle_padding"
                    android:layout_marginRight="@dimen/middle_padding"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>


            <View
                android:id="@+id/gray_line5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/middle_padding"
                android:background="@color/very_light_gray_color" />


            <!-- 设置-->
            <LinearLayout
                android:id="@+id/my_setting_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_select_white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/setting_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/most_big_padding"
                    android:layout_marginStart="@dimen/most_big_padding"
                    android:paddingBottom="@dimen/middle_padding"
                    android:paddingTop="@dimen/middle_padding"
                    android:scaleType="center"
                    android:src="@drawable/icon_choose" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/big_padding"
                    android:textColor="@color/dark_black_color"    android:layout_marginStart="@dimen/big_padding"
                    android:layout_weight="1"
                    android:text="设置" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/middle_padding"
                    android:layout_marginRight="@dimen/middle_padding"
                    android:src="@drawable/arrow_right" />    </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/very_light_gray_color" />
        </LinearLayout>

    </ScrollView>

    <sooglejay.youtu.widgets.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</FrameLayout>
