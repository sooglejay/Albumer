<resources>


    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!--<item name="android:clipChildren">true</item>-->
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="colorPrimary">@color/base_color</item>
        <item name="colorPrimaryDark">@color/base_color</item>
        <item name="colorAccent">@color/base_color</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>


    <style name="home_bottom_bar_container">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_select_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="home_bottom_bar_reddot">
        <item name="android:layout_height">@dimen/little_padding</item>
        <item name="android:layout_width">@dimen/little_padding</item>
        <item name="android:background">@color/light_red</item>
    </style>

    <style name="home_bottom_bar_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <style name="home_bottom_bar_iv">
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_width">24dp</item>
    </style>

    <style name="dialog_right_control_style">
        <item name="android:windowEnterAnimation">@anim/enter_from_top</item>
        <item name="android:windowExitAnimation">@anim/exit_to_bottom</item>
    </style>

    <style name="create_new_group_style">
        <item name="android:windowEnterAnimation">@anim/enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_to_bottom_from_half_y</item>
    </style>


    <!--<style name="CustomDialog" parent="android:style/Theme.Dialog">-->
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/shape_4_white_color</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--<style name="CustomDialog" parent="android:style/Theme.Dialog">-->
    <style name="CreateNewGroupDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/white_color</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>